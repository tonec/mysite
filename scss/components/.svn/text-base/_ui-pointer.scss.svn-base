
// ==========================================================================
// Pointer
// ==========================================================================

// Assumes the following markup:
// <p class="pointer"><a href="..." class="pointer">Pointer text ...</a><span>&nbsp;</span></p>

.pointer { font-weight: normal; }
.pointer a { color: #333; border: 0; text-decoration: none; }
.pointer span {
	background: url(/assets/layouts/SR14/images/ui/sprite.png) no-repeat -414px -42px;
	height: 15px;
	margin-left: 10px;
	padding-right: 6px;
	width: 10px;
}
.pointer:hover span { background-position: -413px -42px }

.pointer.button { font-weight: normal; padding: 0 20px 0 28px; }
.pointer.button span { background-position: -402px -40px; }
.pointer.button--cycle span { background-position: -390px -40px; }

.pointer.button:hover span { background-position: -401px -40px; }
.pointer.button--cycle:hover span { background-position: -389px -40px; }

.event-type-run .pointer span { background-position: -366px -42px; }
.event-type-cycle .pointer span { background-position: -390px -42px; }
.event-type-swim .pointer span { background-position: -378px -42px; }

.event-type-run .pointer:hover span { background-position: -365px -42px; }
.event-type-cycle .pointer:hover span { background-position: -389px -42px; }
.event-type-swim .pointer:hover span { background-position: -377px -42px; }


p.pointer { font-size: 13px; }
p.pointer a { color: #333; } 
.pointer--grey,
p.pointer a { color: #666; }
h3.pointer { font-size: 21px; }

@mixin ui-pointer-min481 {

	p.pointer { font-size: 14px; }
	h3.pointer { font-size: 28px; }
}