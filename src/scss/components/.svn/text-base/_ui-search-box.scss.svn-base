
// ==========================================================================
// Search Box
// ==========================================================================

.search-box { margin: 0 auto; text-align: left; }
.search-fields-wrap { padding-right: 65px; text-align: left; }
.search-fields-wrap .form-input {
	@include border-radius( $corner-radius 0 0 $corner-radius );
	float: left;
	height: 59px;
	padding-right: 0;
}
.search-fields-wrap .button {
	@include border-radius( 0 $corner-radius $corner-radius 0 );
	float: right;
	margin-right: -94px;
	position: relative;
	width: 94px;
	margin-bottom: 0;
}

// Search event pod
.pod-search-event .image {
	background: url(/assets/layouts/SR14/images/ui/sprite.png) no-repeat 0 -92px;
	height: 68px;
	width: 158px;
	margin: 0 auto 10px;
}
.pod-search-event label {
	font-family: $foco;
	font-size: 24px;
	font-weight: normal;
	margin-bottom: 10px;
}
.pod-search-event .search-fields-wrap { max-width: 430px; }
.pod-search-event .search-event-field .form-input { background-color: #eee; }

// Search event field

.search-event-field fieldset { margin: 0; padding: 0; }
.search-event-field .form-input { background-color: #fefefe; font-size: 21px; padding: 16px 0 16px 16px; }
.search-event-field .button {
	background-image: url(/assets/layouts/SR14/images/ui/sprite.png);
	background-position: -480px -7px;
	font-size: 21px;
	height: 59px;
	margin-right: -65px;
	padding: 0;
	text-indent: -9999em;
	width: 65px;
}

.search-event-main-type-radios label { display: inline-block; margin-top: 10px; }

// 
.section-search-event .search-event-field { margin: 0 auto; max-width: 382px; padding: 10px 0 20px; }

@mixin ui-search-box-min481 {
	
	.pod-search-event .pod-inner { padding: 25px 60px; }
	.pod-search-event .image { float: left; margin-right: 25px;}
	.pod-search-event label { font-size: 28px; text-align: left; margin-bottom: 18px; }
}

@mixin ui-search-box-min1070 {

	.pod-search-event .image { position: relative; margin-top: -5px; }
	.pod-search-event label { float: left; margin-right: 50px; padding-top: 15px; }
	.pod-search-event .search-fields-wrap { overflow: hidden; }
}
