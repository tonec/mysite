
// ==========================================================================
// Basket
// ==========================================================================


.basket .pod { position: relative; padding-top: 70px; }
.pod .basket .pod .pod-inner { border-top: 1px solid #000; padding: 15px 0; margin: 0 15px; }

.basket .image-top { width: 100%; position: absolute; }

.basket h3 { text-align: left; font-size: 26px; margin: 0; }
.basket p { font-size: 15px; }

.basket table { background-color: #666; @include border-radius( $corner-radius ); margin-bottom: 20px; }
.basket thead td { background-color: #5e5e5e; border-top: 0; border-bottom: 1px solid #363636; }
.basket  td { padding: 10px; border-top: 1px solid #5e5e5e; font-size: 14px; }

.basket .itm { @include border-radius( $corner-radius 0 0 0 ); width: 50%; }
.basket .qty { text-align: center; width: 25%; }
.basket .amt { text-align: center; width: 25%; @include border-radius( 0 $corner-radius 0 0 ); }

.basket .total { font-size: 24px; text-transform: uppercase; margin: 0; }
.basket .total span { font-weight: bold; }

.lt-ie8 .basket td { float: left; }


// Event specific
.reg-event-type-run .basket { padding-top: 120px; }
.reg-event-type-cycle .basket { padding-top: 120px; }
.reg-event-type-swim .basket { padding-top: 120px; }

.reg-event-type-run .basket .image-top { height: 193px; top: -123px; background: url(/assets/layouts/SR14/images/content/registration/event/basket_pic_run.png) no-repeat 50% 0; }

.reg-event-type-cycle .basket .image-top { height: 193px; top: -123px; background: url(/assets/layouts/SR14/images/content/registration/event/basket_pic_cycle.png) no-repeat 50% 0; }

.reg-event-type-swim .basket .image-top,
.reg-event-type-swim .basket .image-bottom { background: url(/assets/layouts/SR14/images/content/registration/event/basket_pic_swim.png) no-repeat 50% 0; }
.reg-event-type-swim .basket .image-top { height: 195px; top: -125px; }
.reg-event-type-swim .basket .image-bottom { height: 42px; background-position: 50% -198px; }


@mixin ui-basket-min481 {

	.pod .basket.pod .pod-inner { padding: 20px 0; margin: 0 20px; }
}

@mixin ui-basket-min769 {

	.basket { width: 280px; }
}