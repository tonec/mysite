
// ==========================================================================
// Share
// ==========================================================================


// Share page 

.share-wrap {float:right; padding:0.75em 1.5em 0;}
.share-wrap h5 {float:left; line-height:1.7em; margin-right:0.5em; font-size:1.6em; font-weight:500;}
.share-wrap h5 .tip-target {margin-top:0;}

.share-links.pod {width:10em; -webkit-border-radius:4px; -moz-border-radius:4px; border-radius:4px;}
.width-override.share-links.pod { width:12em; } 
.share-links.pod .pod-inner {padding:0.5em 0; -webkit-border-radius:4px; -moz-border-radius:4px; border-radius:4px;}
.share-links .icon {display:inline-block; width:18px; height:18px; background-image:url(data:image/png;base64,); background-repeat:no-repeat;}

.share-links li {margin:0; list-style:none;}
.share-links li a {text-decoration:none; display:block; padding:0.5em 1em;}
.share-links li a > span {display:block; float:left; margin-right:10px;}

.share-links .share-facebook a .icon {background-position:5px 50%;}
.share-links .share-twitter a .icon {background-position:-47px 50%;}
.share-links .share-googleplus a .icon {background-position:-100px 50%;}
.share-links .share-linkedin a .icon {background-position:-155px 50%;}

.share-page {margin:0; overflow:hidden; padding:0;}
.share-page li {padding:0; float:left;}
.share-page li a {margin:0; padding:0 0 4px; width:2.5em; -webkit-border-radius:0; -moz-border-radius:0; border-radius:0; border:0;}
.share-page li a .pod-inner {padding:0; height:2em; filter:none;}
.share-page li a > span {float:none; margin:0;}
.share-page li a .icon {margin:0;}
.share-page li .pod:hover {padding-bottom:2px; padding-top:2px;}
.share-page li .pod:hover .pod-inner {-moz-box-shadow:inset 0 0 3px #2B406C; -webkit-box-shadow:inset 0 0 3px #2B406C; box-shadow:inset 0 0 3px #2B406C;}
.share-page li .pod-inner {-webkit-border-radius:0; -moz-border-radius:0; border-radius:0;}
.share-page li .icon {display:block; width:auto; height:2em;}
.share-page li {text-indent:100%; white-space:nowrap; overflow:hidden;}
.share-page .share-facebook a {background-color:#2b406c; -webkit-border-radius:4px 0 0 4px; -moz-border-radius:4px 0 0 4px; border-radius:4px 0 0 4px;}
.share-page .share-facebook a .icon {background-position:13px 0.5em;}
.share-page .share-facebook .pod-inner {background-color:#788DBA; -webkit-border-radius:4px 0 0 4px; -moz-border-radius:4px 0 0 4px; border-radius:4px 0 0 4px;}
.share-page .share-twitter a {background-color:#2492b4;}
.share-page .share-twitter a .icon {background-position:-40px 0.5em;}
.share-page .share-twitter .pod-inner {background-color:#32CDFD;}
.share-page .share-googleplus a {background-color:#2f2f2f;}
.share-page .share-googleplus a .icon {background-position:-92px 0.5em;}
.share-page .share-googleplus .pod-inner {background-color:#575656;}
.share-page .share-linkedin a {background-color:#015484; -webkit-border-radius:0 4px 4px 0; -moz-border-radius:0 4px 4px 0; border-radius:0 4px 4px 0;}
.share-page .share-linkedin a .icon {background-position:-148px 0.5em;}
.share-page .share-linkedin .pod-inner {background-color:#127FBF; -webkit-border-radius:0 4px 4px 0; -moz-border-radius:0 4px 4px 0; border-radius:0 4px 4px 0;}

.lt-ie8 .share-links .icon {background-image:url(../images/ui/low/icons_social_small.png); filter:none;}
.lt-ie8 .col-meta .share-links {width:9em;}
.lt-ie8 .share-links li .tri {display:none;}

/* Share Page Links - User Junior */
.user-junior .share-page .share-facebook a,
.user-junior .share-page .share-facebook a .pod-inner {-webkit-border-radius:4px; -moz-border-radius:4px; border-radius:4px;}

/* Share Page Links - No JS */
.nojs .share-wrap,
.nojs .share-links {display:none; visibility:hidden;}
